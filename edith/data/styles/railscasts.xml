<?xml version="1.0" encoding="UTF-8"?>
<!--
  Railscasts color scheme for GtkSourceView
  Based on Ryan Bates' Railscasts theme for TextMate
-->
<style-scheme id="railscasts" name="Railscasts" version="1.0">
  <author>Edith Contributors (based on Ryan Bates' Railscasts)</author>
  <description>A warm dark theme inspired by Railscasts</description>

  <!-- Palette -->
  <color name="bg"             value="#2B2B2B"/>
  <color name="fg"             value="#E6E1DC"/>
  <color name="selection"      value="#5A647E"/>
  <color name="current-line"   value="#333435"/>
  <color name="line-numbers"   value="#888"/>
  <color name="comment"        value="#BC9458"/>
  <color name="string"         value="#A5C261"/>
  <color name="keyword"        value="#CC7833"/>
  <color name="type"           value="#FFC66D"/>
  <color name="function"       value="#FFC66D"/>
  <color name="constant"       value="#6D9CBE"/>
  <color name="number"         value="#A5C261"/>
  <color name="variable"       value="#D0D0FF"/>
  <color name="error-red"      value="#DA4939"/>
  <color name="diff-add"       value="#144212"/>
  <color name="diff-remove"    value="#660000"/>
  <color name="diff-change"    value="#2B3F54"/>

  <!-- Global -->
  <style name="text"                        foreground="fg" background="bg"/>
  <style name="cursor"                      foreground="#FFFFFF"/>
  <style name="selection"                   background="selection"/>
  <style name="current-line"                background="current-line"/>
  <style name="current-line-number"         foreground="#E6E1DC" background="current-line"/>
  <style name="line-numbers"                foreground="line-numbers" background="#2B2B2B"/>
  <style name="draw-spaces"                 foreground="#555"/>
  <style name="right-margin"                foreground="#555" background="#2B2B2B"/>
  <style name="background-pattern"          background="#313131"/>
  <style name="bracket-match"               foreground="#E6E1DC" background="#5A647E" bold="true"/>
  <style name="bracket-mismatch"            foreground="#E6E1DC" background="error-red"/>
  <style name="search-match"                foreground="#2B2B2B" background="#FFE792"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="comment" italic="true"/>
  <style name="def:shebang"                 foreground="comment" italic="true"/>
  <style name="def:doc-comment"             foreground="comment" italic="true"/>
  <style name="def:doc-comment-element"     foreground="comment" bold="true"/>
  <style name="def:note"                    foreground="comment" bold="true"/>

  <!-- Strings -->
  <style name="def:string"                  foreground="string"/>
  <style name="def:special-char"            foreground="#DA4939"/>
  <style name="def:character"               foreground="string"/>
  <style name="def:net-address"             foreground="constant" underline="single"/>

  <!-- Keywords -->
  <style name="def:keyword"                 foreground="keyword"/>
  <style name="def:statement"               foreground="keyword"/>
  <style name="def:builtin"                 foreground="keyword"/>
  <style name="def:operator"                foreground="keyword"/>
  <style name="def:special-constant"        foreground="constant"/>
  <style name="def:boolean"                 foreground="constant"/>

  <!-- Types -->
  <style name="def:type"                    foreground="type"/>
  <style name="def:class"                   foreground="type" bold="true"/>
  <style name="def:function"                foreground="function"/>

  <!-- Numbers -->
  <style name="def:number"                  foreground="number"/>
  <style name="def:decimal"                 foreground="number"/>
  <style name="def:floating-point"          foreground="number"/>
  <style name="def:base-n-integer"          foreground="number"/>
  <style name="def:complex"                 foreground="number"/>

  <!-- Constants and Variables -->
  <style name="def:constant"                foreground="constant"/>
  <style name="def:identifier"              foreground="variable"/>

  <!-- Preprocessor -->
  <style name="def:preprocessor"            foreground="keyword"/>
  <style name="def:included-file"           foreground="string"/>

  <!-- Errors / Warnings -->
  <style name="def:error"                   foreground="#FFFFFF" background="error-red" bold="true"/>
  <style name="def:warning"                 foreground="#2B2B2B" background="#FFC66D"/>
  <style name="def:underlined"              underline="single"/>

  <!-- Diff -->
  <style name="diff:added-line"             foreground="string" background="diff-add"/>
  <style name="diff:removed-line"           foreground="error-red" background="diff-remove"/>
  <style name="diff:changed-line"           foreground="constant" background="diff-change"/>
  <style name="diff:location"               foreground="keyword"/>
  <style name="diff:diff-file"              foreground="type" bold="true"/>
  <style name="diff:special-case"           foreground="comment"/>

  <!-- XML / HTML / Markdown -->
  <style name="xml:element-name"            foreground="keyword"/>
  <style name="xml:attribute-name"          foreground="type"/>
  <style name="xml:attribute-value"         foreground="string"/>
  <style name="xml:tag"                     foreground="keyword"/>
  <style name="html:tag"                    foreground="keyword"/>

</style-scheme>
